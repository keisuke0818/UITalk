<%=form_for :post,:method => "GET" do |f| %>
  <div id="search_text_field"><%= f.text_field :search %></div>
  <%= f.button :submit %>
<% end %>
<br/>
<%= link_to '評価順', 'posts?sort=evaluation' %>
<br/>

<div id="post_index">
  <div class="form">
    <%= form_for(:post) do |p| %>
      <span class="input required"><%= p.text_field :title %></span>
      <span class="input required"><%= p.text_area :body %></span>
      <span class="input"><%= p.file_field :image %></span>
      <%= p.submit %>
    <% end %>
  </div>

  <div class="post_set">
    <% @posts.each do |p| %>
    <div class='post'>
      <h2><%= link_to p.title, p %></h2>
      <p><%= p.body %></p>
      <p><%= image_tag "/uploaded/#{p.id.to_s}.png" %></p>
      <%= link_to "削除",p, :confirm => "本当に削除しますか?", :method => :delete %>
    <% end %>
  </div>

  <div id="account_ctrl_panel">
  </div>
</div>
